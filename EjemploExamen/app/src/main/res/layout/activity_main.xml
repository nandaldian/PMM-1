<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chrcuc.ejemploexamen.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Elige Zona" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/foto"
        android:layout_alignStart="@+id/foto"
        android:layout_below="@+id/foto"
        android:layout_marginTop="24dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="tarifa normal" />
        <RadioButton
            android:id="@+id/urgente"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Tarifa urgente"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con caja regalo"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con dedicatoria"
        android:layout_alignBaseline="@+id/checkBox"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/editText"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:text="Introduce el peso"/>

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Hacer calculos" />
</RelativeLayout>
